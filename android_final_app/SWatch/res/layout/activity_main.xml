<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" 
    android:background="@color/white" >

    <EditText
        android:id="@+id/zip_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/number_headlines"
        android:layout_alignParentTop="true"
        android:hint="@string/weather_hint"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="5" />

    <EditText
        android:id="@+id/number_headlines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_weather"
        android:layout_centerHorizontal="true"
        android:hint="@string/headlines_hint"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/get_headlines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_weather"
        android:layout_below="@+id/number_headlines"
        android:text="@string/headlines" />

    <AnalogClock
        android:id="@+id/analogClock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_headlines"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <Button
        android:id="@+id/save_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/number_headlines"
        android:layout_alignLeft="@+id/zip_code"
        android:text="@string/save" />

    <Button
        android:id="@+id/get_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/zip_code"
        android:layout_marginRight="29dp"
        android:text="@string/weather" />

    <Button
        android:id="@+id/save_headlines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/analogClock1"
        android:layout_alignRight="@+id/save_weather"
        android:text="@string/save" />

    <Button
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/analogClock1"
        android:layout_centerHorizontal="true"
        android:text="@string/get_time" />

</RelativeLayout>