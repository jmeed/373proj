<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.swatch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.swatch.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.swatch.WeatherActivity"
            android:label="@string/title_activity_weather" >
        </activity>
        <activity
            android:name="com.example.swatch.HeadlinesActivity"
            android:label="@string/title_activity_headlines" >
        </activity>
        <activity
            android:name="com.example.swatch.BTActivity"
            android:label="@string/title_activity_bt" >
        </activity>
        <activity
            android:name="com.example.swatch.TimeActivity"
            android:label="@string/title_activity_time" >
        </activity>
        <activity
            android:name="com.example.swatch.MusicActivity"
            android:label="@string/title_activity_music" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

</manifest>